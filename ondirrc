enter ~/work
  export GIT_AUTHOR_NAME='Joe Moon'
  export GIT_AUTHOR_EMAIL='jmoon@appnexus.com'
  export GIT_COMMITTER_NAME='joe moon'
  export GIT_COMMITTER_EMAIL='jmoon@appnexus.com'
  export SSH_CONFIG="${HOME}/.ssh/work"
  echo 'Switched to git user/email settings and ssh config for "work".'

leave ~/work
  unset GIT_AUTHOR_NAME
  unset GIT_AUTHOR_EMAIL
  unset GIT_COMMITTER_NAME
  unset GIT_COMMITTER_EMAIL
  export SSH_CONFIG="${HOME}/.ssh/config"
  echo 'Switched back to global git user/email and ssh config settings.'

